<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grahm.livepost.fragments.ProfilePictureFragment">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.grahm.livepost.activities.Login">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a picture"
            android:textColor="#364457"
            android:layout_marginTop="29dp"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"/>

        <com.grahm.livepost.specialViews.RoundedImageView
            android:id="@+id/img_profile"
            android:maxHeight="170dp"
            android:layout_height="140dp"
            android:maxWidth="170dp"
            android:layout_width="140dp"
            android:src="@drawable/ic_no_profile"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on_profile_picture_bottom"
            android:layout_above="@+id/btn_continue"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/first_dark"
            android:layout_alignParentBottom="true"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>


</FrameLayout>
